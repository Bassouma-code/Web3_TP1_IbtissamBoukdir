{% extends "base.jinja" %}

{% block contenu %}

<form method="post" action="/ajout">

    <fieldset>
        <legend>Ajout/modification d'un service</legend>
        <div>
            <label for="nom">Nom : </label>
            <input type="text" name="nom" id="nom" value="{{nom}}" />
        </div>

        <div>
            <label for="localisation">Localisation (ville) : </label>
            <input type="text" name="localisation" id="localisation" value="{{localisation}}" />
        </div>

        <div>
            <label for="description">Description du service : </label>
            <input type="text" name="description" id="description" value="{{description}}" />
        </div>

        <div>
            <label for="cout">Le coût : </label>
            <input type="number" name="cout" id="cout" value="{{cout}}" min="0" step="0.01" />
        </div>


        <div>
            <label for="statut">Statut: (cocher si votre service est actif)</label>
            <input type="checkbox" name="statut" id="statut">
            
        </div>

        <div>
            <label for="categorie">Catégorie : </label>
            <select name="categorie" id="categorie" required>
                <option value="" disabled selected>--Choisir une catégorie--</option>
                {% for categ in categories %}
                <option value="{{ categ }}"> {{categ}}</option>
                {%endfor%}

            </select>
        </div>

        <div>
            <button type="submit">Soumettre</button>
            <button type="reset">Réinitialiser</button>
        </div>
    </fieldset>

</form>

{% endblock %}
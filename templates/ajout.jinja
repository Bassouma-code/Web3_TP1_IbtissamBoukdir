{% extends "base.jinja" %}

{% block contenu %}

<form method="post" action="/ajout">

    <fieldset class="border p-4 rounded">
        <legend class="mt-2 w-auto px-2">Détails du service</legend>

        {# Nom #}
        <div class="mb-3 row">
            <label for="nom" class="col-sm-2 col-form-label">Nom : </label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="nom" id="nom" value="{{nom}}" />
            </div>

        </div>

        {# Localisation #}
        <div class="mb-3 row">
            <label for="localisation" class="col-sm-2 col-form-label">Localisation (ville) : </label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="localisation" id="localisation"
                    value="{{localisation}}" />
            </div>
        </div>


        {# Description #}
        <div class="mb-3 row">
            <label for="description" class="col-sm-2 col-form-label">Description du service : </label>
            <div class="col-sm-6">
                <textarea type="text" class="form-control" name="description" id="description" value="{{description}}"
                    rows="10"></textarea>
            </div>

        </div>

        {# Coût #}
        <div class="mb-3 row">
            <label for="cout" class="col-sm-2 col-form-label">Le coût : </label>
            <div class="col-sm-6">
                <input type="number" class="form-control" name="cout" id="cout" value="{{cout}}" min="0" step="0.01" />
            </div>

        </div>

        {# Statut #}
        <div class="form-check mb-3 row">
            <div class="col-sm-6">
                <input class="form-check-input" type="checkbox" name="statut" id="statut">
            </div>

            <label class="form-check-label" for="statut">Statut: (cocher si votre service est actif)</label>
        </div>

        {# Description #}
        <div class="mb-3 row">
            <label for="categorie" class="form-label">Catégorie : </label>
            <div class="col-sm-6">
               <select class="form-select" name="categorie" id="categorie" required>
                <option value="" disabled selected>--Choisir une catégorie--</option>
                {% for categ in categories %}
                <option value="{{ categ }}"> {{categ}}</option>
                {%endfor%}

            </select>
            </div>
         
        </div>

        <div d-flex justify-content-between>
            <button type="submit" class="btn btn-outline-primary">Soumettre</button>
            <button type="reset" class="btn btn-outline-primary">Réinitialiser</button>
        </div>
    </fieldset>

</form>

{% endblock %}